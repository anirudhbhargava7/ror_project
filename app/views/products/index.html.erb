<%if (session[:email]!=nil) %>
<h1>Listing all Songs</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Genre</th>  
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.desc %></td>
    <td class='btn btn-success'><%= link_to 'Play', product %></td>
    <td class='btn btn-danger'><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Song', new_product_path %>
<%else%>
<h1>ERROR!</h1>
<% end %>